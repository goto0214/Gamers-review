<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 text-center mb-5">
      <h2 class="font3">ユーザー新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>

        <div class="d-flex flex-wrap text-right mb-3">
          <div class="col-md-5">
            <%= f.label :name, class: "col-form-label font3" %>
          </div>
          <div class="col-md-5">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="d-flex flex-wrap text-right mb-3">
          <div class="col-md-5">
            <%= f.label :email, class: "col-form-label font3" %>
          </div>
          <div class="col-md-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="d-flex flex-wrap text-right mb-3">
          <div class="col-md-5">
            <%= f.label :password, class: "col-form-label font3"  %>
            <% if @minimum_password_length %>
            <em class="font3">(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <div class="col-md-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="d-flex flex-wrap text-right mb-5">
          <div class="col-md-5">
            <%= f.label :password_confirmation, class: "col-form-label font3" %>
          </div>
          <div class="col-md-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="actions text-center mb-5">
          <%= f.submit "新規登録する", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to "アカウントをお持ちの方はコチラ", new_user_session_path, class: "font3" %>
      </div>
    </div>
  </div>
</div>


