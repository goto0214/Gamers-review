<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 text-center mb-5">
      <h2 class="font3">ユーザー新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @user, url: user_path, local: true do |f| %>
      <%= render 'layouts/errors', obj: @user %>

      <div class="d-flex flex-wrap text-right mb-5">
          <div class="col-md-5">
            <%= f.label :profile_image, "プロフィール画像", class: "col-form-label font3" %>
          </div>
          <div class="col-md-5">
            <%= f.attachment_field :profile_image %>
          </div>
        </div>

        <div class="d-flex flex-wrap text-right mb-5">
          <div class="col-md-5">
            <%= f.label :name, class: "col-form-label font3" %>
          </div>
          <div class="col-md-5">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="d-flex flex-wrap text-right mb-5">
          <div class="col-md-5">
            <%= f.label :email, class: "col-form-label font3" %>
          </div>
          <div class="col-md-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="actions text-center mb-5">
          <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
      </div>
  </div>
</div>

