<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 mb-5">
      <h1 class="text-center mb-4"><span class="badge badge-secondary font3">マイプロフィール</span></h1>
      <div class="mx-auto mb-5 col-md-12 col-sm-12">
        <%= attachment_image_tag @user, :profile_image, fallback: "blank-profill.png", size: "300x200", class: "mx-auto d-block" %>
      </div>
      <div class="d-flex flex-wrap font3 text-center">
        <div class="col-md-6 text-right">
          <h4>ユーザネーム：</h4>
        </div>
        <div class="col-md-6 text-left">
          <h4><%= @user.name %></h4>
        </div>
      </div>
      <% if !(@user.name == "ゲストユーザー") %>
        <div class="d-flex flex-wrap font3 text-center">
          <div class="col-md-6 text-right">
            <h4>メールアドレス：</h4>
          </div>
          <div class="col-md-6 text-left">
            <h4 class="text-break align-midle"><%= @user.email %></h4>
          </div>
        </div>
        <div class="text-center col-md-12 mt-5">
          <%= link_to "編集する", edit_user_path, class: "btn btn-info btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>