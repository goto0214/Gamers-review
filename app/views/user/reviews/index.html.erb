<div class="container my-5">
  <div class="row mb-5">
    <div class="col-12">
      <div class="d-flex flex-wrap">
        <h3 class="font3">
          <i class="fas fa-lightbulb text-warning"></i>
          レビュー
          <i class="fas fa-lightbulb text-warning"></i>
        </h3>
        <div class="mx-auto">
          <%= form_with url: reviews_path, method: :get, local: true do |f| %>
            <%= f.text_field :keyword, placeholder: "ゲームタイトルで検索", class: "form-control ml-5", autocomplete: 'off', size: "50x50" %>
            <% f.submit %>
          <% end %>
        </div>
        <div class="ml-auto h3">
          <% unless admin_signed_in? %>
            <%= link_to new_review_path, class: "text-white btn btn-gradient-radius" do %>
              <i class="fas fa-plus-circle"></i>
              レビュー投稿
              <i class="fas fa-plus-circle"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <% if @reviews.present? %> <!--検索などの結果に該当するレビューがあるか-->
      <table class="table text-center">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th>関連タグ</th>
            <th>総合評価</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <%= link_to review_path(review) do %>
                  <%= review.title %>
                <% end %>
              </td>
              <td><%= link_to review.genre.genre_name, reviews_path(genre_id: review.genre.id) %></td>
              <td><%= render 'user/reviews/tag_list', tag_list: review.tag_list %></td>
              <td class="evaluation" data-score="<%= review.evaluation %>"></td>
              <td><%= review.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-md-4 offset-md-5">
          <%= paginate @reviews %>
        </div>
      </div>

      <% else %>
        <div class="col-md-12 text-center">
          <h3 class="font3">該当するレビューがありません。</h3>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-5 border py-3">
    <div class="col-12 mb-5">
      <h3 class="text-center">
        <span class="badge badge-secondary badge-pill">カテゴリ一覧</span>
        </h3>
    </div>
    <div class="col-md-12 col-lg-12 d-flex flex-wrap mb-5">
      <% @genres.each do |genre| %>
        <div class="col-lg-3 col-md-4 col-sm-3 mb-2">
          ・<%= link_to genre.genre_name, reviews_path(genre_id: genre.id) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!--評価の☆マークのJavScript-->
<script>
  $('.evaluation').empty();
  $('.evaluation').raty({
    readOnly: true,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>