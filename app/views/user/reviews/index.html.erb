<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex flex-wrap">
        <h3>
          <i class="fas fa-lightbulb text-warning"></i>
          レビュー一覧
          <i class="fas fa-lightbulb text-warning"></i>
        </h3>
        <div class="ml-auto btn btn-success h3 btn-lg btn-outline-success">
          <i class="fas fa-plus-circle"></i>
            <%= link_to "レビュー投稿", new_review_path, class: "text-white link" %>
          <i class="fas fa-plus-circle"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <table class="table text-center">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th class="text-center">評価</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <%= link_to review_path(review) do %>
                  <%= review.title %>
                <% end %>
              </td>
              <td><%= link_to review.genre.genre_name, reviews_path(genre_id: review.genre.id) %></td>
              <td class="evaluation" data-score="<%= review.evaluation %>"></td>
              <td><%= review.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @reviews %>
    </div>
  </div>
  <div class="row mt-5 border py-3">
    <div class="col-12 mb-5">
      <h3 class="text-center">
        <span class="badge badge-secondary badge-pill">カテゴリ一覧</span>
        </h3>
    </div>
    <div class="col-md-12 col-lg-12 d-flex flex-wrap mb-5">
      <% @genres.each do |genre| %>
        <div class="col-lg-3 col-md-4 col-sm-3">
          ・<%= link_to genre.genre_name, reviews_path(genre_id: genre.id) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  $('.evaluation').empty();
  $('.evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>