<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 text-center mb-5">
      <h2 class="font3">ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
       <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="d-flex flex-wrap row mb-5">
          <div class="col-md-5">
            <%= f.label :email, class: "col-form-label font3" %>
          </div>
          <div class="col-md-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="d-flex flex-wrap row mb-5">
          <div class="col-md-5">
            <%= f.label :password, class: "col-form-label font3" %>
          </div>
          <div class="col-md-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <div class="actions text-center mb-5">
          <%= f.submit "ログイン", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to "アカウントをお持ちでない方はコチラ", new_user_registration_path, class: "font3" %>
      </div>
    </div>
  </div>
</div>



