<div class="container mt-5">
  <div class="row">
    <h1 class="mx-auto mb-5">ジャンル一覧・追加</h1>
  </div>
  <div class="row">
    <div class="col-12 my-4 text-center">
      <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.text_field :genre_name, autofocus: true, placeholder: "ジャンル名を入力", size: "30x20" %>
          <%= f.submit "ジャンル名変更", class: "btn btn-info px-3 pl-4 pr-4 ml-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>