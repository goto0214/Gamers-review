<div class="container mt-5">
  <div class="row">
    <h1 class="mx-auto mb-5">ジャンル一覧・追加</h1>
  </div>
  <div class="row">
    <div class="col-12 my-4 mx-auto">
      <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div class="mb-3 d-flex flex-wrap">
          <div>
            <%= f.text_field :genre_name, autofocus: true, placeholder: "ジャンル名を入力", size: "30x20" %>
          </div>
          <div>
            <%= f.submit "ジャンル追加", class: "btn btn-info px-3 pr-4 ml-5" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>