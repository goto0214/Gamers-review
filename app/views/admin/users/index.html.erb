<div class="container my-5">
  <div class="row mb-5">
    <div class="col-12">
      <div class="d-flex flex-wrap">
        <h3>
          <i class="fas fa-lightbulb text-warning"></i>
          全ユーザー
          <i class="fas fa-lightbulb text-warning"></i>
        </h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <table class="table text-center">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>レビュー投稿数</th>
            <th>総合評価</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.reviews.count %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>