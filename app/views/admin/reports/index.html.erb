<div class="container my-5">
  <div class="row mb-5">
    <div class="col-12">
      <div class="d-flex flex-wrap">
        <h3 class="text-danger">
          <i class="fas fa-lightbulb text-warning"></i>
          通報されたレビュー
          <i class="fas fa-lightbulb text-warning"></i>
        </h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <table class="table text-center">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th>総合評価</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr>
              <td>
                <%= link_to review_path(report) do %>
                  <%= report.title %>
                <% end %>
              </td>
              <td><%= report.genre.genre_name %></td>
              <td class="evaluation" data-score="<%= report.evaluation %>"></td>
              <td><%= report.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<!--評価の☆マークのJavScript-->
<script>
  $('.evaluation').empty();
  $('.evaluation').raty({
    readOnly: true,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>