<div class="container my-5">
  <div class="row mb-5">
    <div class="col-12">
      <div class="d-flex flex-wrap">
        <h3>
          <i class="fas fa-lightbulb text-warning"></i>
          レビュー
          <i class="fas fa-lightbulb text-warning"></i>
        </h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <table class="table text-center">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th>総合評価</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr>
              <td>
                <%= link_to review_path(report.review) do %>
                  <%= report.review.title %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
